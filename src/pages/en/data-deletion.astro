---
import Layout from "../../layouts/Layout.astro";
import Navbar from "../../components/Navbar.astro";
import Footer from "../../components/Footer.astro";
import { getLangFromUrl, useTranslations } from "../../i18n/utils";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<Layout title={`${t('footer.data_deletion')} | Peace Center`} description={t('seo.description')}>
	<Navbar />
	<main class="pt-24 pb-16 px-4">
		<div class="max-w-4xl mx-auto prose prose-stone">
			<h1 class="text-3xl font-bold mb-8">{t('footer.data_deletion')}</h1>
			
			<p>You have the right to request the deletion of your personal information from our records.</p>
			
			<h2 class="text-xl font-semibold mt-6 mb-4">How to Request Deletion</h2>
			<p>To request the deletion of your data, please send an email to <strong>info@peacecenter.mx</strong> with the subject "Data Deletion Request".</p>
			
			<h2 class="text-xl font-semibold mt-6 mb-4">Necessary Information</h2>
			<p>Please include in your message:</p>
			<ul class="list-disc pl-6 space-y-2">
				<li>Your full name.</li>
				<li>The email address used for your reservation or contact.</li>
			</ul>
			
			<h2 class="text-xl font-semibold mt-6 mb-4">Response Time</h2>
			<p>We will process your request within a maximum of 30 business days and confirm the deletion via email.</p>
		</div>
	</main>
	<Footer />
</Layout>
