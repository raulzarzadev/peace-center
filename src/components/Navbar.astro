---
const links = [
	{ name: "Inicio", href: "#home" },
	{ name: "Servicios", href: "#servicios" },
	{ name: "Recomendaciones", href: "#recomendaciones" },
	{ name: "Contacto", href: "#contacto" },
];
---

<nav class="fixed w-full z-50 bg-white/90 backdrop-blur-sm shadow-sm">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between h-16 items-center">
      <div class="flex-shrink-0 flex items-center">
        <span class="text-2xl font-bold text-teal-700">Peace Center</span>
      </div>
      <div class="hidden md:ml-6 md:flex md:space-x-8">
        {links.map((link) => (
          <a
            href={link.href}
            class="text-stone-600 hover:text-teal-600 px-3 py-2 rounded-md text-sm font-medium transition-colors"
          >
            {link.name}
          </a>
        ))}
        <div class="flex items-center gap-2">
            <a href="https://www.instagram.com/peacecenterlpz" target="_blank" class="text-stone-600 hover:text-pink-600 transition-colors">
                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="w-6 h-6"><rect x="2" y="2" width="20" height="20" rx="5" ry="5"></rect><path d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z"></path><line x1="17.5" y1="6.5" x2="17.51" y2="6.5"></line></svg>
            </a>
            <a 
              href="https://wa.me/526121539390" 
              target="_blank"
              class="bg-teal-600 text-white px-4 py-2 rounded-full text-sm font-bold hover:bg-teal-700 transition"
            >
              Reservar
            </a>
        </div>
      </div>
      
      <!-- Mobile menu button placeholder -->
      <div class="flex items-center md:hidden">
        <a 
          href="https://wa.me/526121539390" 
          class="bg-teal-600 text-white p-2 rounded-full"
        >
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
            <path stroke-linecap="round" stroke-linejoin="round" d="M2.25 6.75c0 8.284 6.716 15 15 15h2.25a2.25 2.25 0 002.25-2.25v-1.372c0-.516-.351-.966-.852-1.091l-4.423-1.106c-.44-.11-.902.055-1.173.417l-.97 1.293c-.282.376-.769.542-1.21.38a12.035 12.035 0 01-7.143-7.143c-.162-.441.004-.928.38-1.21l1.293-.97c.363-.271.527-.734.417-1.173L6.963 3.102a1.125 1.125 0 00-1.091-.852H4.5A2.25 2.25 0 002.25 4.5v2.25z" />
          </svg>
        </a>
      </div>
    </div>
  </div>
</nav>