---
import { Image } from "astro:assets";
import peaceLogo from "../assets/peace-center-logo.jpeg";
import { getLangFromUrl, useTranslations } from "../i18n/utils";
import WifiConnect from "./WifiConnect";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

const wifiTranslations = {
	btnLabel: t("nav.wifi"),
	modalTitle: t("wifi.modal.title"),
	network: t("wifi.network"),
	password: t("wifi.password"),
	copy: t("wifi.copy"),
	copied: t("wifi.copied"),
	scan: t("wifi.scan"),
};

const links = [
	{ name: t("nav.home"), href: "#home" },
	{ name: t("nav.services"), href: "#servicios" },
	{ name: t("nav.recommendations"), href: "#recomendaciones" },
	{ name: t("nav.contact"), href: "#contacto" },
];

const nextLang = lang === "es" ? "en" : "es";
const nextLangLabel = lang === "es" ? "EN" : "ES";
const nextLangHref = lang === "es" ? "/en" : "/";
---

<nav class="fixed w-full z-50 bg-white/90 backdrop-blur-sm shadow-sm">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between h-16 items-center">
      <div class="flex-shrink-0 flex items-center">
        <a href="#home" aria-label={t("nav.home")}>
          <Image src={peaceLogo} alt="Peace Center" class="h-10 w-auto" />
        </a>
      </div>
      <div class="hidden lg:ml-6 lg:flex lg:space-x-6 items-center">
        {links.map((link) => (
          <a
            href={link.href}
            class="text-stone-600 hover:text-teal-600 px-2 py-2 rounded-md text-sm font-medium transition-colors"
          >
            {link.name}
          </a>
        ))}
        
        <div class="flex items-center gap-3 border-l border-stone-200 pl-4 ml-2">
            <div class="flex items-center gap-2 mr-2">
              <a href={nextLangHref} class="text-stone-500 font-bold hover:text-teal-600 transition-colors text-xs uppercase tracking-wide">
                  {nextLangLabel}
              </a>

              <a href="https://www.instagram.com/peacecenterlpz" target="_blank" class="text-stone-400 hover:text-pink-600 transition-colors" aria-label="Instagram">
                  <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect x="2" y="2" width="20" height="20" rx="5" ry="5"></rect><path d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z"></path><line x1="17.5" y1="6.5" x2="17.51" y2="6.5"></line></svg>
              </a>
            </div>
            
            <WifiConnect client:load translations={wifiTranslations} />

            <div class="flex items-center gap-2">
              <a 
                href="https://bajarent.app/peace-center/RV's-Park" 
                target="_blank"
                class="text-teal-600 hover:bg-teal-50 px-3 py-1.5 rounded-full text-xs font-bold border border-teal-200 transition-colors"
              >
                {t('nav.checkin')}
              </a>
              <a 
                href="https://wa.me/526121539390" 
                target="_blank"
                class="bg-[#25D366] text-white px-4 py-1.5 rounded-full text-xs font-bold hover:bg-[#128C7E] transition shadow-sm hover:shadow"
              >
                {t('nav.book')}
              </a>
            </div>
        </div>
      </div>
      
      <!-- Mobile menu button placeholder -->
      <div class="flex items-center md:hidden gap-4">
        <a href={nextLangHref} class="text-stone-500 font-bold hover:text-teal-600 transition-colors text-sm border border-stone-300 rounded px-2 py-1">
            {nextLangLabel}
        </a>

        <WifiConnect client:load translations={wifiTranslations} />

        <a 
          href="https://bajarent.app/peace-center/RV's-Park" 
          target="_blank"
          class="text-teal-600 border border-teal-600 p-2 rounded-full"
          aria-label={t('nav.checkin')}
        >
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
            <path stroke-linecap="round" stroke-linejoin="round" d="M11.35 3.836c-.065.21-.1.433-.1.664 0 .414.336.75.75.75h4.5a.75.75 0 00.75-.75 2.25 2.25 0 00-.1-.664m-5.8 0A2.251 2.251 0 0113.5 2.25H15c1.012 0 1.867.668 2.15 1.586m-5.8 0c-.376.023-.75.05-1.124.08C9.095 4.01 8.25 4.973 8.25 6.108V8.25m0 0H4.875c-.621 0-1.125.504-1.125 1.125v11.25c0 .621.504 1.125 1.125 1.125h9.75c.621 0 1.125-.504 1.125-1.125V9.375c0-.621-.504-1.125-1.125-1.125H8.25zM6.75 12h.008v.008H6.75V12zm0 3h.008v.008H6.75V15zm0 3h.008v.008H6.75V18z" />
          </svg>
        </a>
        <a 
          href="https://wa.me/526121539390" 
          class="bg-[#25D366] text-white p-2 rounded-full"
        >
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="w-6 h-6">
            <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.008-.57-.008-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413Z"/>
          </svg>
        </a>
      </div>
    </div>
  </div>
</nav>