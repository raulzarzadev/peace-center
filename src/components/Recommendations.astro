---
import { getLangFromUrl, useTranslations, RECOMMENDATIONS_DATA } from '../i18n/utils';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
const recommendations = RECOMMENDATIONS_DATA[lang];
---

<section id="recomendaciones" class="py-20 bg-white">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-16">
      <h2 class="text-3xl font-bold text-stone-900 sm:text-4xl">{t('recommendations.title')}</h2>
      <p class="mt-4 text-xl text-stone-600">{t('recommendations.subtitle')}</p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      {recommendations.map((rec) => (
        <div class="relative group overflow-hidden rounded-2xl h-80">
          <img 
            src={rec.image} 
            alt={rec.title} 
            class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-500"
          />
          <div class="absolute inset-0 bg-gradient-to-t from-stone-900/90 via-stone-900/40 to-transparent flex flex-col justify-end p-6">
            <span class="text-teal-400 text-sm font-bold uppercase tracking-wider mb-2">{rec.category}</span>
            <h3 class="text-2xl font-bold text-white mb-2">{rec.title}</h3>
            <p class="text-stone-300 text-sm line-clamp-3">{rec.description}</p>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>