---
import img1 from "../assets/IMG_4473+(1).webp";
import img2 from "../assets/IMG_4480.webp";
import img3 from "../assets/IMG_4481.webp";
import img4 from "../assets/IMG_4483.webp";
import img5 from "../assets/IMG_4499.webp";
import img6 from "../assets/IMG_4509.webp";

const images = [img1.src, img2.src, img3.src, img4.src, img5.src, img6.src];
---

<section class="py-20 bg-stone-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <h2 class="text-3xl font-bold text-stone-900 sm:text-4xl">Galería</h2>
        <p class="mt-4 text-xl text-stone-600">Un vistazo a nuestro pequeño paraíso.</p>
      </div>

      <div class="columns-1 md:columns-2 lg:columns-3 gap-4 space-y-4">
        {images.map((img, index) => (
            <div class="break-inside-avoid rounded-xl overflow-hidden shadow-lg hover:shadow-xl transition-shadow">
                <img 
                    src={img} 
                    alt={`Galería imagen ${index + 1}`} 
                    class="w-full h-auto object-cover hover:scale-105 transition-transform duration-300"
                    loading="lazy"
                />
            </div>
        ))}
      </div>
    </div>
</section>