---
import heroImage from "../assets/peace-center.webp";
import { getLangFromUrl, useTranslations, CONTACT_DATA } from "../i18n/utils";
import WifiConnect from "./WifiConnect";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

const wifiTranslations = {
	btnLabel: t("nav.wifi"),
	modalTitle: t("wifi.modal.title"),
	network: t("wifi.network"),
	password: t("wifi.password"),
	copy: t("wifi.copy"),
	copied: t("wifi.copied"),
	scan: t("wifi.scan"),
};
---

<section id="home" class="relative bg-stone-900 h-screen min-h-[600px] flex items-center justify-center overflow-hidden">
  <div class="absolute inset-0 z-0">
    <img 
      src={heroImage.src} 
      alt="Peace Center RV Park" 
      class="w-full h-full object-cover opacity-60"
    />
    <div class="absolute inset-0 bg-gradient-to-b from-stone-900/10 to-stone-900/40"></div>
  </div>

  <div class="relative z-10 text-center px-4 max-w-5xl mx-auto mt-16">
    <h1 class="text-4xl md:text-6xl font-bold text-white mb-6 drop-shadow-lg tracking-tight">
      {t('hero.title')} <span class="text-teal-400">La Paz</span>
    </h1>
    <p class="text-xl text-stone-100 mb-8 max-w-2xl mx-auto drop-shadow-md">
      {t('hero.subtitle')}
    </p>
    
    <!-- Botón principal WhatsApp -->
    <div class="mb-6">
      <a 
        href={CONTACT_DATA.whatsapp} 
        target="_blank"
        class="inline-flex items-center justify-center gap-2 bg-[#25D366] hover:bg-[#128C7E] text-white text-lg md:text-xl font-bold py-4 px-8 md:px-12 rounded-full transition-all transform hover:scale-105 shadow-2xl"
      >
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="w-6 h-6 md:w-7 md:h-7 flex-shrink-0">
            <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.008-.57-.008-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413Z"/>
        </svg>
        <span>{t('hero.cta_whatsapp')}</span>
      </a>
    </div>

    <!-- Navegación rápida -->
    <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-4 gap-3 max-w-3xl mx-auto">
      <a 
        href="#servicios" 
        class="bg-white/10 hover:bg-white/20 backdrop-blur-sm border border-white/30 text-white text-sm md:text-base font-semibold py-3 px-4 rounded-lg transition-all hover:scale-105 shadow-lg"
      >
        {t('hero.nav_airbnb')}
      </a>
      
      <a 
        href="#rentas-tours" 
        class="bg-white/10 hover:bg-white/20 backdrop-blur-sm border border-white/30 text-white text-sm md:text-base font-semibold py-3 px-4 rounded-lg transition-all hover:scale-105 shadow-lg"
      >
        {t('hero.nav_tours')}
      </a>

      <a 
        href="#recomendaciones" 
        class="bg-white/10 hover:bg-white/20 backdrop-blur-sm border border-white/30 text-white text-sm md:text-base font-semibold py-3 px-4 rounded-lg transition-all hover:scale-105 shadow-lg"
      >
        {t('hero.nav_recommendations')}
      </a>

      <div class="flex items-center justify-center">
        <WifiConnect client:load translations={wifiTranslations} heroMode={true} />
      </div>
    </div>
  </div>
</section>