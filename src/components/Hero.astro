---
import heroImage from "../assets/peace-center.webp";
import { getLangFromUrl, useTranslations } from "../i18n/utils";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<section id="home" class="relative bg-stone-900 h-screen min-h-[600px] flex items-center justify-center overflow-hidden">
  <div class="absolute inset-0 z-0">
    <img 
      src={heroImage.src} 
      alt="Peace Center RV Park" 
      class="w-full h-full object-cover opacity-60"
    />
    <div class="absolute inset-0 bg-gradient-to-b from-stone-900/10 to-stone-900/40"></div>
  </div>

  <div class="relative z-10 text-center px-4 max-w-4xl mx-auto mt-16">
    <h1 class="text-4xl md:text-6xl font-bold text-white mb-6 drop-shadow-lg tracking-tight">
      {t('hero.title')} <span class="text-teal-400">La Paz</span>
    </h1>
    <p class="text-xl text-stone-100 mb-8 max-w-2xl mx-auto drop-shadow-md">
      {t('hero.subtitle')}
    </p>
    <div class="flex flex-col sm:flex-row gap-4 justify-center">
      <a 
        href="https://wa.me/526121539390" 
        target="_blank"
        class="bg-teal-600 hover:bg-teal-700 text-white text-xl font-bold py-5 px-10 rounded-full transition-all transform hover:scale-110 shadow-xl flex items-center justify-center gap-3"
      >
        <span>{t('hero.cta_whatsapp')}</span>
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke-currentColor" class="w-8 h-8">
            <path stroke-linecap="round" stroke-linejoin="round" d="M8.625 12a.375.375 0 11-.75 0 .375.375 0 01.75 0zm0 0H8.25m4.125 0a.375.375 0 11-.75 0 .375.375 0 01.75 0zm0 0H12m4.125 0a.375.375 0 11-.75 0 .375.375 0 01.75 0zm0 0h-.375M21 12c0 4.556-4.03 8.25-9 8.25a9.764 9.764 0 01-2.555-.337A5.972 5.972 0 015.41 20.97a5.969 5.969 0 01-.474-.065 4.48 4.48 0 00.978-2.025c.09-.457-.133-.901-.467-1.226C3.93 16.178 3 14.189 3 12c0-4.556 4.03-8.25 9-8.25s9 3.694 9 8.25z" />
        </svg>

      </a>
      
      <a 
        href="https://www.instagram.com/peacecenterlpz" 
        target="_blank"
        class="bg-gradient-to-tr from-[#f09433] via-[#dc2743] to-[#bc1888] hover:opacity-90 text-white text-lg font-bold py-4 px-8 rounded-full transition-all transform hover:scale-105 shadow-lg flex items-center justify-center gap-2"
      >
        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="w-6 h-6"><rect x="2" y="2" width="20" height="20" rx="5" ry="5"></rect><path d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z"></path><line x1="17.5" y1="6.5" x2="17.51" y2="6.5"></line></svg>
        <span>Instagram</span>
      </a>

      <a 
        href="#servicios" 
        class="bg-white/10 hover:bg-white/20 backdrop-blur-sm border border-white/30 text-white font-semibold py-3 px-8 rounded-full transition-all flex items-center justify-center"
      >
        {t('hero.cta_services')}
      </a>
    </div>
  </div>
</section>